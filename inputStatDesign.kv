#:kivy 2.0
<ScreenManager>:
	Startup:
		name: 'startup'
	Display:
		name: 'display'

<Startup>:
	BoxLayout:
		cols: 1
		orientation: "vertical"
		size: root.width, root.height
		spacing: 20
		padding: 20
		
		Button:
			text: "Select Dataset"
			font_size: 32
			on_release:
				root.file_selector()
				root.manager.current = 'display'
				root.manager.transition.direction = 'left'
				
			size_hint_y: None
			height: 25
			size: (50, 100)
			
		Button:
			text: "Submit"
			font_size: 32
			color: (0,0,0,1)
			background_normal: ''
			background_color: (0,.6,0,1)
			on_release: root.press()
			size_hint_y: None
			height: 25
			size: (50, 100)
			

		Label:
			text:'Â© QuickStat Team. All Rights Reserved.'
			font_size: 15
			size_hint_y: None
			height: 25
			size: (50, 100)
			background_color: (1,1,1,1)
			# Uncomment the lines below to change the background of the label.
			# canvas.before:
			# 	Color:
			# 		rgba: self.background_color
			# 	Rectangle:
			# 		size: self.size
			# 		pos: self.pos

<Display>:
	#on_enter:
	BoxLayout:
		cols: 4
		size: root.width, root.height

		Label:
			text: root.mytext
		CheckBox:
			on_active: root.exclude_null(self, self.active)

		Label:
			text: "Exclude Outliers"
			
		CheckBox:
			on_active: root.exclude_outliers(self, self.active)

		Button:
			text: "Go Back"
			on_release:
				root.manager.current = "startup"
				root.manager.transition.direction = "right"
