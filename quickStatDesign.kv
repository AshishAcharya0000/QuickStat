#:kivy 2.0
<ScreenManager>:
	Startup:
		name: 'startup'
	Display:
		name: 'display'

<Startup>:
	BoxLayout:
		cols: 1
		orientation: "vertical"
		size: root.width, root.height
		
		Button:
			text: "Select Dataset"
			font_size: 32
			on_release: root.file_chooser()
			size: (50, 100)
		
		Button:
			text: "Submit"
			on_release: 
				root.manager.current = 'display'
				root.manager.transition.direction = 'left'

		Label:
			text:'Â© QuickStat Team. All Rights Reserved.'
			font_size: 15

<Display>:
	on_enter: root.create_df()
	BoxLayout:
		cols: 4
		size: root.width, root.height
		Label:
			text: "Exclude Nulls"

		CheckBox:
			on_active: root.exclude_null(self, self.active)

		Label:
			text: "Exclude Outliers"
			
		CheckBox:
			on_active: root.exclude_outliers(self, self.active)

		Button:
			text: "Go Back"
			on_release:
				root.manager.current = "startup"
				root.manager.transition.direction = "right"